<h1 class="bold text-xl mx-auto text-center mt-5 font-bold">Pieejamie novietojumi
  <h1>
    <%= form_tag(show_positions_path, method: :get, class: "max-w-md mx-auto mt-8") do %>
      <a>Izvēlaties novietojumu:</a>
      <div class="flex items-center border-b border-b-2 py-2">
        <%= select_tag(:choice, options_for_select(['Poniju maršruti', 'Poniju vingrinājumi', 'Zirgu maršruti', 'Zirgu vingrinājumi']), class: "appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none") %>
        <%= submit_tag("Apkatīt", class: "bg-gray-700 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") %>
      </div>
    <% end %>
